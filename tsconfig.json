{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es2020",
		"jsx": "preserve",
		"strictFunctionTypes": true,
		"sourceMap": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"useDefineForClassFields": true,
		"outDir": "build",
		"rootDir": "src"
	},
	"exclude": ["node_modules", "**/node_modules/*"],
	"include": ["src"]
}

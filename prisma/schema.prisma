// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model QueueData {
  id            String     @id
  voiceChannel  String?
  queuePosition Int
  playerStatus  String
  playedTime    Int
  list          SongData[]

  @@map("Queue")
}

model SongData {
  url       String        @id
  title     String
  mediaUrl  String
  duration  Int
  source    String
  requester String
  thumbnail String?
  uploader  String?
  chapters  ChapterData[]
  queue     QueueData?    @relation(fields: [queueId], references: [id])
  queueId   String?

  @@map("Song")
}

model ChapterData {
  id        String @id
  title     String
  startTime Int

  SongData    SongData? @relation(fields: [songDataUrl], references: [url])
  songDataUrl String?
  @@map("Chapter")
}
